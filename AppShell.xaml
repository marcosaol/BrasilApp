<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BrasilApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BrasilApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="BrasilApp">
    <TabBar>
        <Tab Title="Bancos" Icon="bank.png">
            <ShellContent ContentTemplate="{DataTemplate views:BanksView}" />
        </Tab>
        <Tab Title="Localizar Cidades">
            <ShellContent ContentTemplate="{DataTemplate views:LocateCityView}" />
        </Tab>
    </TabBar>

</Shell>
